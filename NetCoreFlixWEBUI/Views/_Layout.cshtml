<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/node_modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/node_modules/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body style="background-image:url(https://assets.nflxext.com/ffe/siteui/vlv3/b240387e-2a90-4525-8ad6-f51af8d75e69/a3d79c02-bcd1-4a5a-b8ba-a161179c9d72/TR-tr-20191014-popsignuptwoweeks-perspective_alpha_website_large.jpg)">

    <div class="col-md-12">

        <div class="navbar navbar-expand-sm bg-danger navbar-dark">
            <div class="container">
                <a href="/" class="navbar-brand"> NetCoreFlix </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Login"  class="nav-link"> Login</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Register" class="nav-link"> Register</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
                        @await Component.InvokeAsync("FavListSummary")

                    </li>
                </ul>

            </div>
        </div>




    </div>


    <div class="container">

        <div class="row">
            <div class="col-md-3">
                @await Component.InvokeAsync("CategoryList")
            </div>

            <div class="col-md-9">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-info" role="alert">@TempData["message"]</div>
                }
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="footer py-3 mt-3">
            <div class="container">
                <span class="text-muted">
                    Place footer content here.
                </span>
            </div>
        </div>
    </div>
</body>
</html>
